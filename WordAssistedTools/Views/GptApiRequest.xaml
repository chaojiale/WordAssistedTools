<UserControl
  x:Class="WordAssistedTools.Views.GptApiRequest"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:WordAssistedTools.Views"
  xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:properties="clr-namespace:WordAssistedTools.Properties"
  xmlns:vm="clr-namespace:WordAssistedTools.ViewModels"
  MinWidth="400"
  MinHeight="600"
  HorizontalAlignment="Stretch"
  VerticalAlignment="Stretch"
  d:Background="White"
  mc:Ignorable="d">
  <UserControl.DataContext>
    <vm:GptApiRequestViewModel />
  </UserControl.DataContext>
  <UserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml" />
        <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <Style BasedOn="{StaticResource ButtonDefault}" TargetType="Button">
        <Setter Property="Width" Value="80" />
      </Style>
      <Style x:Key="{x:Static markdig:Styles.DocumentStyleKey}" TargetType="{x:Type FlowDocument}">
        <Setter Property="FontFamily" Value="Microsoft YaHei" />
        <Setter Property="FontSize" Value="13" />
      </Style>
    </ResourceDictionary>
  </UserControl.Resources>
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="5*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <TextBlock Margin="0,5" Text="Q:" />
    <TextBox
      Grid.Row="1"
      MinHeight="50"
      VerticalAlignment="Stretch"
      VerticalContentAlignment="Top"
      AcceptsReturn="True"
      Text="{Binding Question}"
      TextWrapping="Wrap"
      VerticalScrollBarVisibility="Auto" />
    <StackPanel
      Grid.Row="2"
      Margin="0,5,0,0"
      HorizontalAlignment="Right"
      Orientation="Horizontal">
      <TextBlock
        Margin="20,0"
        VerticalAlignment="Center"
        d:Text="当前进度：等待响应"
        Text="{Binding CurrentState}" />
      <Button Command="{Binding StartApiRequestCommand}" Content="发起请求" />

    </StackPanel>
    <TextBlock
      Grid.Row="3"
      Margin="0,5"
      Text="A:" />
    <markdig:MarkdownViewer
      x:Name="AnswerViewer"
      Grid.Row="4"
      MinHeight="200"
      VerticalAlignment="Stretch"
      Markdown="{Binding Answer}" />
    <!--<TextBox
      Grid.Row="4"
      MinHeight="300"
      VerticalAlignment="Stretch"
      VerticalContentAlignment="Top"
      AcceptsReturn="True"
      Text="{Binding Answer}"
      TextWrapping="Wrap"
      VerticalScrollBarVisibility="Auto" />-->
    <Grid Grid.Row="5">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>
      <CheckBox
        Grid.Column="0"
        Content="移除空行"
        IsChecked="{Binding Source={x:Static properties:Settings.Default}, Path=GptApiIsRemoveEmptyLine}" />
      <Button
        Grid.Row="0"
        Grid.Column="2"
        Margin="8,4"
        Command="{Binding ReplaceSelectionCommand}"
        Content="替换选择" />
      <Button
        Grid.Row="0"
        Grid.Column="3"
        Command="{Binding ReplaceParagraphsCommand}"
        Content="替换段落" />
      <Button
        Grid.Row="1"
        Grid.Column="2"
        Command="{Binding CopyToClipboardCommand}"
        Content="剪贴板" />
      <Button
        Grid.Row="1"
        Grid.Column="3"
        Command="{Binding CopyToBelowCommand}"
        Content="粘贴至下方" />
    </Grid>
  </Grid>
</UserControl>
